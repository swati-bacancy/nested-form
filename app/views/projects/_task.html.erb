<tr>
  <td><%= f.input :title, label: false %></td>
  <td><%= f.input :completed, label: false %></td>
  <td><%= f.input :description, label: false %></td>
  <td>
    <%= f.input_field :_destroy, as: :hidden %>
    <%= link_to 'javascript:void(0)', class: 'destroy_record btn red darken-4' do %>
    	<i class="fa fa-remove fa-2x"></i>
   	<% end -%>
    <div class="form-actions">
       <%= link_to 'javascript:void(0)',class:"green darken-2 btn add_comments",data:{
                     id: @nested_id,
                     "nested-html":nested_content_for_comment(:comments,f,@nested_id).html_safe
                    } do %>
                    <i class='fa fa-plus'></i>
       <% end -%>
    </div>

  </td>
  <td>
    <table>
      <thead>
        <th>Comments</th>
      </thead>
      <tbody id="comments">
          <tr>
            <td>
              <div >
                <%= f.simple_fields_for :comments do |a| %>
                  <%= render 'comment', comment: a %>
                <% end %>
              </div>
            </td>
          </tr>
      </tbody>
    </table>
  </td>
</tr>
